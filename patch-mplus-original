#!/usr/bin/env bash

set -e

FONT_SCRIPT="$HOME/src/nerd-font-patcher/custom-font-patcher"
FONT_RESULT_DIR="${FONT_RESULT_DIR:-MPlus-Original}"
OUTPUT_ROOT_DIR="${OUTPUT_ROOT_DIR:-out}"
FONT_OUTPUT_DIR="${OUTPUT_ROOT_DIR}/${FONT_RESULT_DIR}"
FONT_DIR=~/src/fonts/MPlus-Original/otf
FONT_GLYPHS_OPTIONS="${FONT_GLYPHS_OPTIONS:---complete}"
FONT_PATCHER_OPTIONS="$FONT_GLYPHS_OPTIONS $@ --output $FONT_OUTPUT_DIR -q --no-progressbars"

echo "FONT_DIR: ${FONT_DIR}"
echo "FONT_PATCHER_OPTIONS: ${FONT_PATCHER_OPTIONS}"

mkdir -p "$FONT_OUTPUT_DIR"

"$FONT_SCRIPT" $FONT_PATCHER_OPTIONS "$FONT_DIR/mplus-1m-thin.otf"
"$FONT_SCRIPT" $FONT_PATCHER_OPTIONS "$FONT_DIR/mplus-1m-bold.otf"
"$FONT_SCRIPT" $FONT_PATCHER_OPTIONS "$FONT_DIR/mplus-1m-light.otf"
"$FONT_SCRIPT" $FONT_PATCHER_OPTIONS "$FONT_DIR/mplus-1m-medium.otf"
"$FONT_SCRIPT" $FONT_PATCHER_OPTIONS "$FONT_DIR/mplus-1m-regular.otf"

"$FONT_SCRIPT" $FONT_PATCHER_OPTIONS "$FONT_DIR/mplus-2m-thin.otf"
"$FONT_SCRIPT" $FONT_PATCHER_OPTIONS "$FONT_DIR/mplus-2m-bold.otf"
"$FONT_SCRIPT" $FONT_PATCHER_OPTIONS "$FONT_DIR/mplus-2m-light.otf"
"$FONT_SCRIPT" $FONT_PATCHER_OPTIONS "$FONT_DIR/mplus-2m-medium.otf"
"$FONT_SCRIPT" $FONT_PATCHER_OPTIONS "$FONT_DIR/mplus-2m-regular.otf"

"$FONT_SCRIPT" $FONT_PATCHER_OPTIONS "$FONT_DIR/mplus-1mn-thin.otf"
"$FONT_SCRIPT" $FONT_PATCHER_OPTIONS "$FONT_DIR/mplus-1mn-bold.otf"
"$FONT_SCRIPT" $FONT_PATCHER_OPTIONS "$FONT_DIR/mplus-1mn-light.otf"
"$FONT_SCRIPT" $FONT_PATCHER_OPTIONS "$FONT_DIR/mplus-1mn-medium.otf"
"$FONT_SCRIPT" $FONT_PATCHER_OPTIONS "$FONT_DIR/mplus-1mn-regular.otf"

