env FONT_NAME="RecMono-Duotone-Nerd-Font-Adjusted-Line-Height" ./patch-recursive-duotone -l $@

env FONT_NAME="RecMono-Linear-Nerd-Font"                      ./patch-recursive-linear $@
env FONT_NAME="RecMono-Linear-Nerd-Font-Adjusted-Line-Height" ./patch-recursive-linear -l $@

env FONT_NAME="RecMono-SemiCasual-Nerd-Font"                      ./patch-recursive-semicasual $@
env FONT_NAME="RecMono-SemiCasual-Nerd-Font-Adjusted-Line-Height" ./patch-recursive-semicasual -l $@
